- hosts: all
  vars_files:
    - /etc/ansible/group_vars/tools_vars

  tasks:
    - name: create installer directory
      file:
        path={{ item }}
        state=directory
      with_items:
        - '{{ installer_path }}' 

    - name: Download and Untar Symantec Packages
      unarchive:
        src: '{{ repo_path }}/symantec/v1x/base/Symantec_Antivirus_Setup.tar.gz'
        dest: '{{ installer_path }}'
        remote_src: yes

    - name: Install latest version of glibc
      yum:
        name: glibc*686  
        skip_broken: yes

    - name: Run installer and it will start symantec service
      shell: |
             cd {{ installer_path }}
             ./install.sh -i
             systemctl restart rtvscand
